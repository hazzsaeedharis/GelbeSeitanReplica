import Head from 'next/head'
import { useRouter } from 'next/router'
import { useState, useEffect } from 'react'
import dynamic from 'next/dynamic'
import SearchBox from '../../../src/components/SearchBox'

// Import MapView as dynamic to avoid SSR issues with Leaflet
const MapView = dynamic(() => import('../../../src/components/MapView'), {
  ssr: false,
  loading: () => (
    <div style={{
      height: '400px',
      width: '100%',
      display: 'flex',
      alignItems: 'center',
      justifyContent: 'center',
      backgroundColor: '#f5f5f5'
    }}>
      <p>Karte wird geladen...</p>
    </div>
  ),
})

interface Business {
  id: string
  name: string
  address: string
  city: string
  postcode: string
  phone: string | null
  website: string | null
  branches: string[]
  lat: number | null
  lon: number | null
}

interface SearchResponse {
  total: number
  results: Business[]
  page: number
  page_size: number
}

export default function SearchResults() {
  const router = useRouter()
  const { keyword, location } = router.query
  
  const [results, setResults] = useState<Business[]>([])
  const [total, setTotal] = useState(0)
  const [loading, setLoading] = useState(true)
  const [error, setError] = useState<string | null>(null)
  const [page, setPage] = useState(1)
  const [selectedBusiness, setSelectedBusiness] = useState<Business | null>(null)

  useEffect(() => {
    if (!keyword || !location) return

    const fetchResults = async () => {
      setLoading(true)
      setError(null)

      try {
        // Convert slug back to searchable term
        const keywordTerm = Array.isArray(keyword) ? keyword[0] : keyword
        const locationTerm = Array.isArray(location) ? location[0] : location
        
        const searchKeyword = keywordTerm.replace(/_/g, ' ')
        const searchLocation = locationTerm.replace(/_/g, ' ')

        const response = await fetch(
          `http://localhost:8000/api/v1/search?keyword=${encodeURIComponent(searchKeyword)}&location=${encodeURIComponent(searchLocation)}&page=${page}&page_size=20`
        )

        if (!response.ok) {
          throw new Error('Fehler beim Laden der Ergebnisse')
        }

        const data: SearchResponse = await response.json()
        setResults(data.results)
        setTotal(data.total)
      } catch (err) {
        setError(err instanceof Error ? err.message : 'Ein Fehler ist aufgetreten')
      } finally {
        setLoading(false)
      }
    }

    fetchResults()
  }, [keyword, location, page])

  const keywordDisplay = typeof keyword === 'string' ? keyword.replace(/_/g, ' ') : ''
  const locationDisplay = typeof location === 'string' ? location.replace(/_/g, ' ') : ''

  return (
    <>
      <Head>
        <title>{`${keywordDisplay} in ${locationDisplay} | Gelbe Seiten`}</title>
        <meta name="description" content={`${keywordDisplay} in ${locationDisplay} ‚úâ Adresse ‚òé Telefonnummer ‚åö √ñffnungszeiten. √úber ${total} Eintr√§ge helfen Ihnen den besten Anbieter zu finden.`} />
        <link rel="stylesheet" href="/assets/branchen/css/global_above.css" />
        <link rel="stylesheet" href="/assets/branchen/css/global_below.css" />
        <link rel="stylesheet" href="/assets/branchen/css/trefferliste_above.css" />
        <link rel="stylesheet" href="/assets/branchen/css/trefferliste_below.css" />
        <link rel="stylesheet" href="/assets/branchen/css/schaufenster_global.css" />
        <link rel="preload" href="/assets/branchen/fonts/TheSansB4-3_Light.woff2" as="font" type="font/woff2" crossOrigin="anonymous" />
        <link rel="preload" href="/assets/branchen/fonts/TheSansB4-5_Plain.woff2" as="font" type="font/woff2" crossOrigin="anonymous" />
        <link rel="preload" href="/assets/branchen/fonts/TheSansB4-7_Bold.woff2" as="font" type="font/woff2" crossOrigin="anonymous" />
      </Head>

      <div className="page hide-overflow">
        {/* Header */}
        <div className="mod mod-Header gc-header" data-module="gc-header">
          <div className="gc-header__bar">
            <div className="gc-header__line">
              <a href="/" className="gc-header__logo">
                <span className="sr-only">Gelbe Seiten</span>
                <img src="/assets/images/gelbe-seiten-logo.svg" width={271} height={37} alt="Gelbe Seiten" />
              </a>
            </div>
          </div>
        </div>

        {/* Search Box */}
        <div className="container-wrapper" style={{ padding: '20px 0', backgroundColor: '#ffdc00' }}>
          <div className="container page-container">
            <SearchBox />
          </div>
        </div>

        {/* Results */}
        <div className="container-wrapper">
          <main className="page__main page-container container">
            <h1 className="text--h1 text--bold" style={{ margin: '24px 0' }}>
              {keywordDisplay} in {locationDisplay}
            </h1>

            {loading && (
              <div style={{ padding: '40px', textAlign: 'center' }}>
                <p>Lade Ergebnisse...</p>
              </div>
            )}

            {error && (
              <div style={{ padding: '40px', textAlign: 'center', color: 'red' }}>
                <p>{error}</p>
              </div>
            )}

            {!loading && !error && results.length === 0 && (
              <div style={{ padding: '40px', textAlign: 'center' }}>
                <p>Keine Ergebnisse gefunden. Versuchen Sie es mit anderen Suchbegriffen.</p>
              </div>
            )}

            {!loading && !error && results.length > 0 && (
              <>
                <div style={{ marginBottom: '16px' }}>
                  <p><strong>{total} Treffer</strong> gefunden</p>
                </div>

                {/* Map View */}
                <div style={{ marginBottom: '32px' }}>
                  <MapView 
                    businesses={results}
                    height="400px"
                    onMarkerClick={(business) => setSelectedBusiness(business)}
                  />
                </div>

                {/* Results List */}
                <div className="gs-box" style={{ marginBottom: '32px' }}>
                  {results.map((business, index) => (
                    <div
                      key={business.id}
                      className="gs-box"
                      style={{
                        padding: '20px',
                        marginBottom: '16px',
                        border: '1px solid #e0e0e0',
                        borderRadius: '8px',
                        backgroundColor: selectedBusiness?.id === business.id ? '#fffbea' : 'white'
                      }}
                    >
                      <div style={{ display: 'flex', justifyContent: 'space-between', alignItems: 'start' }}>
                        <div style={{ flex: 1 }}>
                          <h2 style={{ margin: '0 0 12px 0', fontSize: '20px', fontWeight: 'bold' }}>
                            <a
                              href={`/gsbiz/${business.id}`}
                              style={{ color: '#247bbd', textDecoration: 'none' }}
                            >
                              {business.name}
                            </a>
                          </h2>
                          
                          <p style={{ margin: '4px 0', color: '#666' }}>
                            üìç {business.address}
                          </p>
                          
                          {business.phone && (
                            <p style={{ margin: '4px 0', color: '#666' }}>
                              üìû {business.phone}
                            </p>
                          )}
                          
                          {business.website && (
                            <p style={{ margin: '4px 0' }}>
                              <a
                                href={business.website}
                                target="_blank"
                                rel="noopener noreferrer"
                                style={{ color: '#247bbd' }}
                              >
                                üåê Website besuchen
                              </a>
                            </p>
                          )}
                        </div>

                        <div style={{ marginLeft: '20px' }}>
                          <span
                            style={{
                              display: 'inline-block',
                              padding: '4px 12px',
                              backgroundColor: '#ffdc00',
                              borderRadius: '20px',
                              fontSize: '14px',
                              fontWeight: 'bold'
                            }}
                          >
                            {index + 1}
                          </span>
                        </div>
                      </div>

                      <div style={{ marginTop: '16px', display: 'flex', gap: '12px' }}>
                        <a
                          href={`/gsbiz/${business.id}`}
                          className="gs-btn gs-btn--black gs-btn--s"
                          style={{
                            padding: '8px 16px',
                            textDecoration: 'none',
                            borderRadius: '4px',
                            fontSize: '14px'
                          }}
                        >
                          Details
                        </a>
                        
                        {business.phone && (
                          <a
                            href={`tel:${business.phone}`}
                            className="gs-btn gs-btn--yellow gs-btn--s"
                            style={{
                              padding: '8px 16px',
                              textDecoration: 'none',
                              borderRadius: '4px',
                              fontSize: '14px'
                            }}
                          >
                            Anrufen
                          </a>
                        )}
                        
                        {business.lat && business.lon && (
                          <a
                            href={`https://www.openstreetmap.org/directions?from=&to=${business.lat},${business.lon}`}
                            target="_blank"
                            rel="noopener noreferrer"
                            className="gs-btn gs-btn--outline gs-btn--s"
                            style={{
                              padding: '8px 16px',
                              textDecoration: 'none',
                              borderRadius: '4px',
                              fontSize: '14px'
                            }}
                          >
                            Route
                          </a>
                        )}
                      </div>
                    </div>
                  ))}
                </div>

                {/* Pagination */}
                {total > 20 && (
                  <div style={{ display: 'flex', justifyContent: 'center', gap: '8px', marginTop: '32px' }}>
                    <button
                      onClick={() => setPage(p => Math.max(1, p - 1))}
                      disabled={page === 1}
                      className="gs-btn gs-btn--outline"
                      style={{ opacity: page === 1 ? 0.5 : 1 }}
                    >
                      Vorherige
                    </button>
                    
                    <span style={{ padding: '8px 16px', display: 'flex', alignItems: 'center' }}>
                      Seite {page} von {Math.ceil(total / 20)}
                    </span>
                    
                    <button
                      onClick={() => setPage(p => p + 1)}
                      disabled={page >= Math.ceil(total / 20)}
                      className="gs-btn gs-btn--outline"
                      style={{ opacity: page >= Math.ceil(total / 20) ? 0.5 : 1 }}
                    >
                      N√§chste
                    </button>
                  </div>
                )}
              </>
            )}
          </main>
        </div>
      </div>
    </>
  )
}
